<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.vaslabs.sdc.ui.SkyDivingSessionActivity" >


      <Button 
            android:id="@+id/mockAddingSkydiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/mock_skydiver_addition"/>
      
        
        <RelativeLayout
            android:id="@+id/rlWrapper"
            android:layout_above="@id/mockAddingSkydiver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            >
	        <ListView
	            android:id="@+id/skydiversListView"
	            android:layout_height="match_parent"
	            android:layout_width="match_parent"
	            android:background="#000000"
	        />
        </RelativeLayout>
   </RelativeLayout>
